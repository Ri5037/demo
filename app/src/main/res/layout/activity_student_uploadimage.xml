<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/browse"
            android:layout_gravity="center_vertical"
            android:text="Browse"/>
    </LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_REG_NO"
        android:hint="Reg No."
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_NAME"
        android:hint="Your Name"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_EMAIL"
        android:hint="Your Email"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_Password"
        android:hint="Password"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_DEPT"
        android:hint="Your Deptarment"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/STD_CONTACT"
        android:hint="Your Contact"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        android:textColor="#fff"
        android:id="@+id/STD_Upload"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Upload"/>

</androidx.appcompat.widget.LinearLayoutCompat>